{
    "configuration": {
        "name": "log4j2 logging configuration",
        "packages": "de.e2security.e2netwatch",
        "ThresholdFilter": {
            "level": "debug"
        },
        "appenders": {
            "Console": {
                "name": "STDOUT",
                "PatternLayout": {
                    "pattern": "%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n"
                }
            },
            "RollingFile": {
	            "name":"File",
	            "fileName":"logs/middleware.log",
	            "filePattern":"logs/archive/middleware-backup-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz",
	            "PatternLayout": {
	               "pattern":"%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n"
	            },
	            "Policies": {
	               "SizeBasedTriggeringPolicy": {
	                  "size":"10 MB"
	               }
	            },
	            "DefaultRolloverStrategy": {
	               "max":"10"
	            }
	         }
        },
        "loggers": {
            "root": {
                "level": "info",
                "AppenderRef": {
                    "ref": "STDOUT"
                }
            },
            "logger": [
            	{
            		"name": "de.e2security.e2netwatch",
                	"level": "info",
                	"AppenderRef": {
                    	"ref": "File"
                	}
            	}
            ]
        }
    }
}